<div class="container my-5">
<%= form_for @test do |form| %>
  <% if @test.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@test.errors.count, "error") %> prohibited this test from being saved:</h2>

      <ul>
        <% @test.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-bordered">
    <tbody>
      <%= form.fields_for :slides do |slide_form| %>
        <tr>
          <td>Do you think you got <%= pluralize(slide_form.index + 1, "slide")  %> correct?</td>
          <td>
            <%= slide_form.radio_button :is_confident, true%>
            <%= slide_form.label :is_confident, "Yes", value: true%>
          </td>
          <td>
            <%= slide_form.radio_button :is_confident, false%>
            <%= slide_form.label :is_confident, "No", value: false%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  </div>
  <%= form.hidden_field :user_id, value: current_user.id%>

  <div class="form-group text-center">
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
  
</div>
